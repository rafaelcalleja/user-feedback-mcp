{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@get-user-feedback/shared": ["packages/shared/src"],
      "@get-user-feedback/shared/*": ["packages/shared/src/*"],
      "@get-user-feedback/mcp-server": ["packages/mcp-server/src"],
      "@get-user-feedback/mcp-server/*": ["packages/mcp-server/src/*"],
      "@get-user-feedback/electron-gui": ["packages/electron-gui/src"],
      "@get-user-feedback/electron-gui/*": ["packages/electron-gui/src/*"]
    }
  }
}
